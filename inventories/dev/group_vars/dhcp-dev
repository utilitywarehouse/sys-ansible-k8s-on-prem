# interfaces
dhcp_listen_interfaces: |-
  interface=eth0

# dhcp ranges
dhcp_ranges: |-
  dhcp-range=set:dhcp,10.88.0.3,10.88.0.4,12h
  dhcp-range=set:cumulus,10.88.0.197,10.88.0.198,12h

# dhcp static hosts
dhcp_static_hosts: |-
  dhcp-host=fc:15:b4:22:07:a2,10.88.0.3
  dhcp-host=fc:15:b4:22:07:a3,10.88.0.4
  dhcp-host=cc:37:ab:a9:23:16,10.88.0.197
  dhcp-host=cc:37:ab:a9:23:f4,10.88.0.198

# dhcp options
dhcp_options: |-
  dhcp-option=tag:k8s,option:router,10.88.0.1
  dhcp-option=tag:k8s,6,1.1.1.1,1.0.0.1

# matchbox address
dhcp_matchbox: 'http://matchbox.dev.gcp.uw.systems:80/boot.ipxe'
