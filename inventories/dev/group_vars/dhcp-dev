# interfaces
dhcp_listen_interfaces: |-
  interface=eth0

# dhcp ranges
dhcp_ranges: |-
  dhcp-range=set:k8s,10.88.0.4,10.88.0.254,12h

# dhcp static hosts
dhcp_static_hosts: |-
  dhcp-host=94:C6:91:86:FE:88,10.88.0.8   # cfssl
  dhcp-host=94:C6:91:86:FE:9A,10.88.0.32  # etcd
  dhcp-host=94:C6:91:86:D3:B1,10.88.0.64  # master-1
  dhcp-host=94:C6:91:86:FE:4D,10.88.0.128 # worker-1
  dhcp-host=6C:4B:90:6A:71:40,10.88.0.129 # worker-2

# dhcp options
dhcp_options: |-
  dhcp-option=tag:k8s,option:router,10.88.0.1
  dhcp-option=tag:k8s,6,8.8.8.8

# matchbox address
dhcp_matchbox: 'http://matchbox-k8s-exp-1.dev.gcp.uw.systems:80/boot.ipxe'
